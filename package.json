{
	"name": "course-catalogue",
	"version": "2.0.0",
	"description": "Web App to find online courses",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"server": "nodemon server.js",
		"client-install": "npm install --prefix client",
		"client": "npm start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"test": "cross-env NODE_ENV=test jest --forceExit",
		"test:watch": "cross-env NODE_ENV=test jest --watchAll",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
		"format": "prettier --write **/*.js",
		"lint": "eslint ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PiyushPawar17/course-catalogue.git"
	},
	"author": "Piyush Pawar",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/PiyushPawar17/course-catalogue/issues"
	},
	"homepage": "https://github.com/PiyushPawar17/course-catalogue#readme",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.18.3",
		"concurrently": "^3.6.1",
		"express": "^4.16.4",
		"jsonwebtoken": "^8.3.0",
		"mongoose": "^5.3.9",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"validator": "^11.1.0"
	},
	"devDependencies": {
		"babel-jest": "24.8.0",
		"cross-env": "^5.2.0",
		"eslint": "5.16.0",
		"eslint-config-prettier": "^4.2.0",
		"eslint-plugin-jest": "^22.14.1",
		"eslint-plugin-prettier": "^3.0.1",
		"jest": "24.7.1",
		"nodemon": "^1.18.6",
		"prettier": "^1.17.0",
		"supertest": "^3.3.0"
	}
}
